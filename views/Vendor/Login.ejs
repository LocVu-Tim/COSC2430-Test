<%- include('../partials/head.ejs') %>
<link rel="stylesheet" href="/css/vendor/login.css"/>

<body>
    <div class="container box">
        <div class="forms">
            <div class="form login">
                <span class="title">Login</span>
                <form action="#">
                    <div class="input-field">
                        <input name="username" type="text" placeholder="Enter your username" required>
                        <i class="uil uil-user"></i>
                    </div>
                    <div class="input-field">
                        <input name="password" type="password" class="password" placeholder="Enter your password" required>
                        <i class="uil uil-lock icon"></i>
                        <i class="uil uil-eye-slash showHidePw"></i>
                    </div>
                    <!-- <div class="checkbox-text">
                        <div class="checkbox-content">
                            <input type="checkbox" id="logCheck">
                            <label for="logCheck" class="text">Remember me</label>
                        </div>
                        
                        <a href="#" class="text">Forgot password?</a>
                    </div> -->
                    <div class="input-field button">
                        <button type="submit" class="text">Login</button>
                    </div>
                </form>
                <div class="login-signup">
                    <span class="text">Not a member?
                        <a href="#" class="text signup-link">Signup Now</a>
                    </span>
                </div>
            </div>
            <!-- Registration Form -->
            <div class="form signup">
                <span class="title">Registration</span>
                <form action="#">
                    <div class="input-field">
                        <input name="username" type="text" placeholder="Enter your username" required>
                        <i class="uil uil-user"></i>
                    </div>
                    <div class="input-field">
                        <input name="password" type="password" class="password" placeholder="Enter your password" required>
                        <i class="uil uil-lock icon"></i>
                        <i class="uil uil-eye-slash showHidePw"></i>
                    </div>
                    <div class="input-field">
                        <input name="name" type="text" placeholder="Enter your business name" required>
                        <i class="uil uil-house-user"></i>
                    </div>
                    <div class="input-field">
                        <input name="address" type="text" placeholder="Enter your business address" required>
                        <i class="uil uil-building"></i>
                    </div>
                    <!-- <div class="checkbox-text">
                        <div class="checkbox-content">
                            <input type="checkbox" id="termCon">
                            <label for="termCon" class="text">I accepted all terms and conditions</label>
                        </div>
                    </div> -->
                    <div class="input-field button">
                        <button type="button" class="text next">Next</button>
                    </div>
                </form>
                <div class="login-signup">
                    <span class="text">Already a member?
                        <a href="#" class="text login-link">Login Now</a>
                    </span>
                </div>
            </div>
            <!-- Profile Picture input -->
            <div class="form image">
                <span class="title">Registration</span>
                <div class="upload-img">
                    <div class="profile-image-container">
                        <label for="upload-file"></label>
                        <img src="/images/vendor/vendorLogin.png" alt="Profile Image" id="profile-image">
                        
                        <input type="file" id="upload-file" accept="jpeg, jpg, png" onchange="readURL(this);">
                    </div>
                    <div class="input-field button">
                        <button type="button" class="text back">Back</button>
                    </div>
                    <div class="input-field button">
                        <button type="submit">Next</button>
                    </div>
                </div>
            </div>

        </div>
    </div>
        
 
  <script src="/js/vendor/login.js"></script>




</body>



</html>